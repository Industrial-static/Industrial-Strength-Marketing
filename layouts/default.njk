{% extends "layout.njk" %}
{% block body %}
<div class="container-fluid {{ 'padding-top' if headerCssClass }}">
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2 {{ path | cssClassify }} main-copy">
            <!-- Title and Last Updated Date -->
            <h2 id="industrials-website-privacy-policy">{{ heading }}</h2>
            <p><em>{{ last_updated_date }}</em></p>

            <!-- Loop through policies and render each section based on its type -->
            {% for policy in policies %}
                <h3 class="{{ path | cssClassify }}">{{ policy.policy_title | safe }}</h3>
                <div class="{{ path | cssClassify }}">  <!-- Common class applied to wrapping div -->
                    {% for content in policy.policy_content %}
                        {% if content.type == 'paragraph' %}
                            <p class="{{ path | cssClassify }}">{{ content.text | safe }}</p>
                        {% elif content.type == 'bullet_list' %}
                            <ul class="{{ path | cssClassify }}">
                                {% for item in content.items %}
                                    <li>{{ item }}</li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                    {% endfor %}
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
