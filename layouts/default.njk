{% extends "layout.njk" %}
{% block body %}
<div class="container-fluid {{ headerCssClass ? 'padding-top' : '' }}">
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2 main-copy">
            <!-- Title and Last Updated Date -->
            <h2 id="industrials-website-privacy-policy">{{ heading }}</h2>
            <p><em>{{ last_updated_date }}</em></p>

            <!-- Loop through policies and render with HTML-safe content -->
            {% for policy in policies %}
                <h3 class="{{ path ? path : 'default-class' }}">{{ policy.policy_title | safe }}</h3>
                <div class="{{ path ? path : 'default-class' }}">
                    {% for paragraph in policy.policy_description.split('\n') %}
                        {% if paragraph.startswith('*') %}
                            <ul>
                                {% for line in paragraph.split('\n') %}
                                    {% if line.strip().startswith('*') %}
                                        <li>{{ line | replace('* ', '') | safe }}</li>
                                    {% endif %}
                                {% endfor %}
                            </ul>
                        {% else %}
                            <p class="{{ path ? path : 'default-class' }}">{{ paragraph | safe }}</p>
                        {% endif %}
                    {% endfor %}
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
